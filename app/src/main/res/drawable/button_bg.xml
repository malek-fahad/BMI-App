<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#9F9FF6">

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#ea2b43"
                android:endColor="#e42527"
                android:angle="0"/>
            <corners android:radius="20dp" />
            <stroke android:width="5px" android:color="#ea2b43" />
            <padding
                android:left="20dp"
                android:right="20dp"
                android:top="5dp"
                android:bottom="5dp"/>
        </shape>
    </item>
</ripple>